<body>


    <div class="container">
        <h1 class="mb-4">Blog post</h1>
        <a href="/article/new" class="btn btn-success">New post</a>
        <% articles.forEach(x=>{ %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= x.title %>
                    </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= x.createdon.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2">
                        <%=x.description %>
                    </div>
                    <a href="/article/<%= x.id %>" class="btn btn-primary">Read</a>
                    <form action="/article/<%= x.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">delete</button>
                    </form>
                </div>
                <% }) %>
            </div>
    </div>
